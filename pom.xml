<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tilab.jade</groupId>
  <artifactId>jade</artifactId>
  <version>4.5.4-6868</version>
  <name>p20-jade-fipa</name>
  <description>Core JADE Platform to JKD-11 proposal</description>


	<properties>
	    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>


	 <build>
  
     <resources>
       <resource>
          <directory>src/main/java</directory>
          <excludes>
            <exclude>**/*.java</exclude>
          </excludes>
        </resource>
     </resources>

	   <plugins>
	     <plugin>
	       <groupId>org.apache.maven.plugins</groupId>
	       <artifactId>maven-jar-plugin</artifactId>
         <version>3.2.2</version>
	       <configuration>
	         <archive>
	           <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
	         </archive>

	       </configuration>

	     </plugin>

         <plugin>
           <artifactId>maven-compiler-plugin</artifactId>
           <version>2.3.2</version>
             <configuration>
                  <source>11</source>
                  <target>11</target>


                  <compilerArgs>
                    <arg>--add-exports</arg>
                    <arg>java.desktop/com.sun.java.swing.plaf.motif.resources=ALL-UNNAMED</arg>
                    <arg>--add-exports</arg>
                    <arg>java.desktop/com.sun.java.swing.plaf.windows.resources=ALL-UNNAMED</arg>
                  </compilerArgs>

                  

                  
                </configuration>
          </plugin>



         </plugins>
       </build>







</project>
